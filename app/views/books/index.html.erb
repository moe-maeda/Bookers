  <h1>Books</h1>
  <table class="index-list">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
　　　  　<td><%= link_to "Show", book_path(book.id) %></td>
　　　　  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
　　　　  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <h2>New book</h2>
  <% if @book.errors.any? %>
    <div class="errors-box">
      <div class="errors-title"><strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong></div>
      <ul class="errors-message" type="square">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book do |f| %>
    <div class="form-box">
      <p class="form-text">Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="form-box">
      <p class="form-text">Body</p>
      <%= f.text_area :body %>
    </div>
      <%= f.submit 'Create Book' %>
  <% end %>
